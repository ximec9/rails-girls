<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
          <td><%= link_to ' ', idea, :class=>"glyphicon glyphicon-eye-open iconsize" %></td>
        <td><%= link_to '', idea, :class=>"glyphicon glyphicon-pencil iconsize" %></td>
        <td><%= link_to '', idea, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'glyphicon glyphicon-trash iconsize' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<span class="glyphicon glyphicon-tree-deciduous" aria-hidden="true"></span>
<p> Actualmete hay <%= Idea.count %> ideas activas </p>
<br>

<%= link_to 'New Idea', new_idea_path %>
